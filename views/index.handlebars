<h1>Eat-Da-Burger!</h1>

<form class="create-form">

    <div class="form-group">
        <input type="text" id="burger_nameID" name="burger_name"><br><br>
    </div>


    <button id='burgerButton' type="submit">Add Burger</button>
</form>


<div class='burgerList'>
    <h2>Burgers to devour</h2>

    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div class='burgerList'>
    <h2>Burgers that are devoured!</h2>

    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block-NoButton devoured=true}}
        {{/if}}
        {{/each}}
    </ul>

</div>
